<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/history_header_background"
    android:padding="12dp"
    android:elevation="2dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/history_header_today_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/info_status_text_padding"
            android:textSize="@dimen/info_status_text_size"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="@string/info_status_today"/>
        <TextView
            android:id="@+id/history_header_today_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/info_status_text_size"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:text="13"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/history_header_total_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/info_status_text_padding"
            android:textSize="@dimen/info_status_text_size"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="@string/info_status_total"/>
        <TextView
            android:id="@+id/history_header_total_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/info_status_text_size"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:text="67"/>
    </LinearLayout>
</LinearLayout>